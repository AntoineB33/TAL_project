    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: WSL OpenNMT",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/home/antoine/anaconda3/envs/env_opennmt/bin/python",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
          "name": "Python Debugger: WSL (System Python)",
          "type": "debugpy",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "python": "/usr/bin/python3",
          "justMyCode": true,
        }
    ]
}